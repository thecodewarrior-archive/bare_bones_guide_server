<h1>Listing guides</h1>

<table>
  <thead>
    <tr>
      <th>Guide pack version</th>
      <th>Path</th>
      <th>Title</th>
      <th>Guide image</th>
      <th>Content</th>
      <th>Manifest version</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guides.each do |guide| %>
      <tr>
        <td><%= guide.guide_pack_version %></td>
        <td><%= guide.path %></td>
        <td><%= guide.title %></td>
        <td><%= guide.guide_image %></td>
        <td><%= guide.content %></td>
        <td><%= guide.manifest_version %></td>
        <td><%= link_to 'Show', guide %></td>
        <td><%= link_to 'Edit', edit_guide_path(guide) %></td>
        <td><%= link_to 'Destroy', guide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Guide', new_guide_path %>
